<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document_custom">

            <t t-call="web.basic_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat" /> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <t t-set="state" t-value="doc.state" />
                <t t-set="address">
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <p t-if="doc.partner_id.vat">
                        <t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'" />
                        <span t-field="doc.partner_id.vat" />
                    </p>
                </t>
                <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                                        and doc.partner_invoice_id != doc.partner_id
                                        or doc.partner_shipping_id != doc.partner_invoice_id">
                    <t t-set="information_block">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and Shipping Address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing Address:</strong>
                        <div t-field="doc.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                        <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                            <strong>Shipping Address:</strong>
                            <div t-field="doc.partner_shippglking_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                        </t>
                    </t>
                </t>

                <div class="header" style="margin-bottom: 10px;">
                    <div class="row">
                        <div class="col-8">
                            <div>
                                <img src='/personalization_tissage_documents/static/logo/tissage_logo.png' style="height: 130px; width: 520px; float: left; margin-top: 32px; margin-bottom: 20px;" alt="Logo" />
                            </div>
                        </div>
                        <div class="col-4" name="order_data" style="margin-top:30px; margin-botton:25px;">
                            <h1 class="mt16">

                                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                    <span t-if="doc.state not in ['draft','sent']" style="text-transform: uppercase; font-size:75%;"> Pedido </span>
                                    <span t-if="doc.state in ['draft','sent']" style="text-transform: uppercase; font-size:75%;">Cotización </span>
                                </t>
                                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                    <div>
                                        <span style="text-transform: uppercase; font-size:75%;">Factura  </span>
                                    </div>

                                    <div>
                                        <span style="text-transform: uppercase; font-size:75%;">Pro-Forma </span>
                                    </div>
                                </t>
                            </h1>

                            <div t-if="doc.state">
                                <t t-esc="'Estado:'" />
                                <span t-field="doc.state" />
                            </div>

                            <div t-if="doc.company_id.vat">
                                <t t-esc="'R.N.C:'" />
                                <span t-field="doc.company_id.vat" />
                            </div>

                            <div t-if="doc.date_order">
                                <t t-esc="'Fecha:'" />
                                <span t-field="doc.date_order" t-options='{"widget": "date"}' />
                            </div>

                            <div t-if="doc.name">
                                <strong>
                                    <t t-esc="'Número:'" />
                                    <span t-field="doc.name" />
                                </strong>
                            </div>

                            <div t-if="doc.user_id">
                                <t t-esc="'Vendedor:'" />
                                <span t-field="doc.user_id" />
                            </div>

                            <div t-if="doc.payment_term_id">
                                <t t-esc="'Condición:'" />
                                <span t-field="doc.payment_term_id" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page" style="margin-top:100px;">
                    <div class="oe_structure" />
                    <div class="row mt32 mb32" id="informations">
                        <div t-if="doc.partner_id" class="col-auto col-4 mw-100 mb-2">
                            <div>
                                <strong>Cliente:</strong>
                                <span class="m-0" t-field="doc.partner_id" />
                            </div>

                            <div t-if="doc.partner_id.contact_address_complete">
                                <strong>Dirección: </strong>
                                <span class="m-0" t-field="doc.partner_id.contact_address_complete" />
                            </div>

                            <div t-if="doc.partner_id.phone">
                                <strong>Teléfono: </strong>
                                <span class="m-0" t-field="doc.partner_id.phone" />
                            </div>

                        </div>

                        <div t-if="doc.partner_id" class="col-auto col-8 mw-100 mb-2">
                            <div t-if="doc.partner_id.vat">
                                <strong>R.N.C: </strong>
                                <span class="m-0" t-field="doc.partner_id.vat" />
                            </div>
                        </div>
                    </div>
                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)" />

                    <table class="table table-sm o_main_table" style="margin-top:20px;">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_internal_reference" class="text-left">Referencia Interna</th>
                                <th name="th_product" class="text-left">Producto</th>
                                <th name="th_quantity" class="text-right">Cantidad</th>
                                <th name="th_priceunit" class="text-right">Precio Unitario</th>
                                <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <span>Desc.%</span>
                                </th>
                                <th name="th_taxes" class="text-right">ITBIS</th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Monto</span>
                                    <strong>
                                        <span groups="account.group_show_line_subtotals_tax_included">Total</span>
                                    </strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0" />

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included" />

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td name="td_default_code">
                                            <span t-field="line.product_id.default_code" />
                                        </td>
                                        <td name="td_product">
                                            <span t-field="line.product_id.name" />
                                        </td>

                                        <td name="td_quantity" class="text-right">
                                            <span t-field="line.product_uom_qty" />
                                            <span t-field="line.product_uom" />
                                        </td>
                                        <td name="td_priceunit" class="text-right">
                                            <span t-field="line.price_unit" />
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                            <span t-field="line.discount" />
                                        </td>
                                        <td name="td_taxes" class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))" />
                                        </td>
                                        <td name="td_subtotal" class="text-right o_price_total">

                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included" />

                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td name="td_section_line" colspan="99">
                                            <span t-field="line.name" />
                                        </td>
                                        <t t-set="current_section" t-value="line" />
                                        <t t-set="current_subtotal" t-value="0" />
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99">
                                            <span t-field="line.name" />
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td name="td_section_subtotal" colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <!-- Tax totals -->
                                    <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)" />
                                    <t t-call="account.document_tax_totals" />

                                    <t t-set="total_amount_residual" t-value="0" />
                                    <t t-if="len(doc.invoice_ids) != 0">
                                        <t t-foreach="doc.invoice_ids" t-as="o">

                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()" />
                                                <t t-foreach="payments_vals" t-as="payment_vals">
                                                    <tr>
                                                        <td>
                                                            <i class="oe_form_field text-right oe_payment_label">
                                                                Pagado en
                                                                <t t-esc="payment_vals['date']" t-options='{"widget": "date"}' />
                                                            </i>
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) > 0">
                                                    <tr class="border-black">
                                                        <td>
                                                            <strong>Monto Adeudado</strong>
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-field="o.amount_residual" />
                                                            <t t-set="total_amount_residual" t-value="total_amount_residual + o.amount_residual" />
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                        <tr class="border-black">
                                            <td>
                                                <strong>Monto Adeudado Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_residual" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-elif="len(doc.account_payment_ids) > 0">
                                        <t t-foreach="doc.account_payment_ids" t-as="p">
                                            <t t-if="p.state == 'posted'">

                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label">
                                                            Pagado en
                                                            <t t-esc="p.date" t-options='{"widget": "date"}' />
                                                        </i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="p.amount_company_currency_signed" t-options='{"widget": "monetary", "display_currency": p.currency_id}' />
                                                    </td>
                                                </tr>

                                            </t>
                                        </t>

                                        <tr class="border-black">
                                            <td>
                                                <strong>Monto Adeudado </strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_residual" />
                                            </td>
                                        </tr>

                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="oe_structure" style="color:black;" />

                    <t t-if="not is_html_empty(doc.note)" name="termino_y_condiciones">
                        <div class="oe_no_empty" style="margin-top:30px;">

                            <span t-esc="'TÉRMINO Y CONDICIONES DE PAGO'" />

                            <div style="color:black">
                                <span field="len(doc.note)" />
                            </div>
                        </div>
                    </t>

                    <div style="margin-top:30px;">
                        <div class="row">
                            <div class="col-6" style="margin-top:80px;">
                                <div style="text-align:center;">
                                    <t t-esc="'__________________________________________'" />
                                </div>
                                <div style="text-align:center;">
                                    <t t-esc="'Preparado por: '" />
                                    <span t-field="doc.create_uid" />
                                </div>
                            </div>
                            <div class="col-6" name="order_data" style="margin-top:80px;">
                                <div style="text-align:center;">
                                    <t t-esc="'________________________________________'" />
                                </div>
                                <div style="text-align:center;">
                                    <t t-esc="'Recibido por: '" />
                                    <span t-field="doc.write_uid" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature" style="margin-top:30px;">

                        <div style="text-align:center">
                            <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;" />
                        </div>
                        <div style="text-align:center;">
                            <t t-esc="'________________________________________'" />
                        </div>
                        <div style="text-align:center;">
                            <t t-esc="'Firma del cliente: '" />
                            <span t-field="doc.signed_by" />
                        </div>
                    </div>

                </div>

                <!-- support for custom footer -->
                <t t-if="not o" t-set="o" t-value="doc" />

                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>

                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <div class="row" style="margin-top:1px; margin-left:5px;">
                        <div t-if="doc.date_order">
                            <t t-esc="'Fecha:'" />
                            <span t-field="doc.date_order" />
                        </div>
                    </div>
                    <div class="text-center" style="border-top: 1px solid black;">
                        <ul class="list-inline mb4">
                            <div class="text-center">
                                <li t-if="company.partner_id.contact_address" class="list-inline-item d-inline">
                                    <span class="o_force_ltr" t-field="company.partner_id.contact_address" />
                                </li>
                            </div>

                            <li t-if="company.phone" class="list-inline-item d-inline">
                                <span class="o_force_ltr" t-field="company.phone" />
                            </li>
                            <li t-if="company.email" class="list-inline-item d-inline">
                                <span t-field="company.email" />
                            </li>
                            <li t-if="company.website" class="list-inline-item d-inline">
                                <span t-field="company.website" />
                            </li>
                            <li t-if="company.vat" class="list-inline-item d-inline">
                                <t
                                    t-out="company.country_id.vat_label or 'Tax ID'" />

                                <span t-field="company.vat" />
                            </li>
                        </ul>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_saleorder_custom">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="personalization_tissage_documents.report_saleorder_document_custom" t-lang="doc.partner_id.lang" />
                </t>
            </t>
        </template>

        <template id="report_saleorder_pro_forma_custom">
            <t t-call="web.html_container">
                <t t-set="is_pro_forma" t-value="True" />
                <t t-foreach="docs" t-as="doc">
                    <t t-call="personalization_tissage_documents.report_saleorder_document_custom" t-lang="doc.partner_id.lang" />
                </t>
            </t>
        </template>
    </data>
</odoo>